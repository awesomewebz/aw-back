                    <input name="name" required class="border-2 rounded-md border-aw-300 focus:border-blue-300 w-full outline-none bg-slate-50 p-3" type="text" placeholder="Enter Your Name">
                </div>
                <div class="w-full lg:w-5/12 mb-4 lg:mb-0">
                    <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                    <input name="email" required class="border-2 rounded-md border-aw-300 focus:border-blue-300 w-full outline-none bg-slate-50 p-3"  type="email" placeholder="Enter Your Email">
